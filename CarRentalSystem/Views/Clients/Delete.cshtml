@model CarRentalSystem.Entities.Users.Client

@{
    ViewData["Title"] = "Delete Client";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold mb-0">
                <i class="fas fa-trash text-danger"></i> Delete Client
            </h1>
            <p class="text-muted">Confirm client deletion</p>
        </div>
    </div>

    <!-- Error Message if client has rentals -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Back Button -->
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
            <i class="fas fa-info-circle"></i> View Details
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning!</strong> You are about to delete this client. This action cannot be undone.
                    </div>

                    <!-- Client Information Card -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">
                                <i class="fas fa-user"></i> Client Information
                            </h6>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-3">Client ID:</dt>
                                <dd class="col-sm-9">#@Model.Id</dd>

                                <dt class="col-sm-3">Full Name:</dt>
                                <dd class="col-sm-9">
                                    <strong>@Model.FirstName @Model.LastName</strong>
                                </dd>

                                <dt class="col-sm-3">PESEL:</dt>
                                <dd class="col-sm-9">
                                    <span class="badge bg-secondary">@Model.PESEL</span>
                                </dd>

                                <dt class="col-sm-3">Email:</dt>
                                <dd class="col-sm-9">@Model.Email</dd>

                                <dt class="col-sm-3">Phone:</dt>
                                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                                <dt class="col-sm-3">Location:</dt>
                                <dd class="col-sm-9">
                                    @if (!string.IsNullOrEmpty(Model.City))
                                    {
                                        <span>@Model.City @(!string.IsNullOrEmpty(Model.PostalCode) ? $"({Model.PostalCode})" : "")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </dd>

                                <dt class="col-sm-3">Total Rentals:</dt>
                                <dd class="col-sm-9 mb-0">
                                    @if (Model.Rentals != null && Model.Rentals.Any())
                                    {
                                        <span class="badge bg-warning text-dark">@Model.Rentals.Count rental(s)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">No rentals</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.Rentals != null && Model.Rentals.Any())
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-ban"></i>
                            <strong>Cannot Delete!</strong> This client has <strong>@Model.Rentals.Count</strong> rental(s) in the system.
                            You must remove or reassign all rentals before deleting this client.
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="fas fa-info-circle"></i> View Rentals
                            </a>
                        </div>
                    }
                    else
                    {
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            
                            <div class="alert alert-info" role="alert">
                                <i class="fas fa-info-circle"></i>
                                This client has no rental history and can be safely deleted.
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this client?');">
                                    <i class="fas fa-trash"></i> Delete Client
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss error alerts after 5 seconds
        setTimeout(function() {
            $('.alert-danger.alert-dismissible').fadeOut('slow');
        }, 5000);
    </script>
}
