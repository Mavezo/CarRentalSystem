@model CarRentalSystem.Entities.Vehicles.Model

@{
    ViewData["Title"] = "Delete Model";
    var carsCount = ViewBag.CarsCount ?? 0;
    var canDelete = carsCount == 0;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold mb-0 text-danger">
                <i class="fas fa-trash-alt"></i> Delete Model
            </h1>
            <p class="text-muted">Confirm deletion of model</p>
        </div>
    </div>

    <!-- Error Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirm Deletion
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle"></i> Warning!
                        </h5>
                        <p>Are you sure you want to delete this model?</p>
                        <hr>
                        <p class="mb-0">This action cannot be undone.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">
                            <i class="fas fa-hashtag"></i> ID
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Id
                        </dd>

                        <dt class="col-sm-3">
                            <i class="fas fa-list"></i> Model Name
                        </dt>
                        <dd class="col-sm-9">
                            <strong class="fs-5">@Model.ModelName</strong>
                        </dd>

                        <dt class="col-sm-3">
                            <i class="fas fa-trademark"></i> Brand
                        </dt>
                        <dd class="col-sm-9">
                            @if (Model.Brand != null)
                            {
                                <a asp-controller="Brands" asp-action="Details" asp-route-id="@Model.Brand.Id" class="text-decoration-none">
                                    <span class="badge bg-primary fs-6">
                                        <i class="fas fa-trademark"></i> @Model.Brand.BrandName
                                    </span>
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </dd>

                        <dt class="col-sm-3">
                            <i class="fas fa-car"></i> Associated Cars
                        </dt>
                        <dd class="col-sm-9">
                            @if (carsCount > 0)
                            {
                                <span class="badge bg-danger fs-6">@carsCount car(s)</span>
                                <div class="alert alert-danger mt-2" role="alert">
                                    <i class="fas fa-exclamation-circle"></i> 
                                    <strong>Cannot delete!</strong> This model has associated cars.
                                </div>
                            }
                            else
                            {
                                <span class="badge bg-success">No associated cars</span>
                            }
                        </dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            @if (canDelete)
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Confirm Delete
                                </button>
                            }
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Status Section -->
        <div class="col-md-4">
            @if (carsCount > 0)
            {
                <div class="card shadow-sm border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-car"></i> Cannot Delete
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-danger">
                            <strong>This model cannot be deleted because it has @carsCount car(s) associated with it.</strong>
                        </p>
                        <hr />
                        <p class="mb-0">
                            <i class="fas fa-info-circle"></i> 
                            Please delete or reassign these cars before deleting the model.
                        </p>
                        <hr />
                        <div class="d-grid">
                            <a asp-controller="Cars" asp-action="Index" asp-route-modelId="@Model.Id" class="btn btn-outline-primary">
                                <i class="fas fa-car"></i> View Associated Cars
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm border-success">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-check-circle"></i> Safe to Delete
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-success">
                            <i class="fas fa-check"></i> This model has no associated cars and can be safely deleted.
                        </p>
                    </div>
                </div>
            }

            <div class="card shadow-sm border-info mt-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-link"></i> Quick Links
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.Brand != null)
                        {
                            <a asp-controller="Brands" asp-action="Details" asp-route-id="@Model.Brand.Id" class="btn btn-outline-primary">
                                <i class="fas fa-eye"></i> View Brand Details
                            </a>
                        }
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-list"></i> View All Models
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
