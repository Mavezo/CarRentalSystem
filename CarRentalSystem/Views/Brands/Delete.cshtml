@model CarRentalSystem.Entities.Vehicles.Brand

@{
    ViewData["Title"] = "Delete Brand";
    var hasModels = Model.Models != null && Model.Models.Any();
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold mb-0 text-danger">
                <i class="fas fa-trash-alt"></i> Delete Brand
            </h1>
            <p class="text-muted">Confirm deletion of brand</p>
        </div>
    </div>

    <!-- Error Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirm Deletion
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle"></i> Warning!
                        </h5>
                        <p>Are you sure you want to delete this brand?</p>
                        <hr>
                        <p class="mb-0">This action cannot be undone.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">
                            <i class="fas fa-hashtag"></i> ID
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Id
                        </dd>

                        <dt class="col-sm-3">
                            <i class="fas fa-trademark"></i> Brand Name
                        </dt>
                        <dd class="col-sm-9">
                            <strong class="fs-5">@Model.BrandName</strong>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Country))
                        {
                            <dt class="col-sm-3">
                                <i class="fas fa-globe"></i> Country
                            </dt>
                            <dd class="col-sm-9">
                                @Model.Country
                            </dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.BodyType))
                        {
                            <dt class="col-sm-3">
                                <i class="fas fa-car-side"></i> Body Type
                            </dt>
                            <dd class="col-sm-9">
                                @Model.BodyType
                            </dd>
                        }

                        @if (Model.Year > 0)
                        {
                            <dt class="col-sm-3">
                                <i class="fas fa-calendar"></i> Year
                            </dt>
                            <dd class="col-sm-9">
                                @Model.Year
                            </dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Transmission))
                        {
                            <dt class="col-sm-3">
                                <i class="fas fa-cog"></i> Transmission
                            </dt>
                            <dd class="col-sm-9">
                                @Model.Transmission
                            </dd>
                        }

                        <dt class="col-sm-3">
                            <i class="fas fa-list"></i> Associated Models
                        </dt>
                        <dd class="col-sm-9">
                            @if (hasModels)
                            {
                                <span class="badge bg-danger fs-6">@Model.Models!.Count model(s)</span>
                                <div class="alert alert-danger mt-2" role="alert">
                                    <i class="fas fa-exclamation-circle"></i> 
                                    <strong>Cannot delete!</strong> This brand has associated models.
                                </div>
                            }
                            else
                            {
                                <span class="badge bg-success">No associated models</span>
                            }
                        </dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            @if (!hasModels)
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Confirm Delete
                                </button>
                            }
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Associated Models Section -->
        <div class="col-md-4">
            @if (hasModels)
            {
                <div class="card shadow-sm border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-list"></i> Associated Models
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-danger">
                            <strong>This brand cannot be deleted because it has the following models:</strong>
                        </p>
                        <ul class="list-group list-group-flush">
                            @foreach (var brandModel in Model.Models!.OrderBy(m => m.ModelName))
                            {
                                <li class="list-group-item">
                                    <i class="fas fa-list"></i> @brandModel.ModelName
                                </li>
                            }
                        </ul>
                        <hr />
                        <p class="mb-0">
                            <i class="fas fa-info-circle"></i> 
                            Please delete or reassign these models before deleting the brand.
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm border-success">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-check-circle"></i> Safe to Delete
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-success">
                            <i class="fas fa-check"></i> This brand has no associated models and can be safely deleted.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
