@model CarRentalSystem.Entities.Vehicles.Model

@{
    ViewData["Title"] = "Edit Model";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold mb-0">
                <i class="fas fa-edit text-warning"></i> Edit Model
            </h1>
            <p class="text-muted">Update model information for @Model.ModelName</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-list"></i> Model Information
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="BrandId" class="form-label">
                                <i class="fas fa-trademark"></i> Brand <span class="text-danger">*</span>
                            </label>
                            <select asp-for="BrandId" class="form-select" asp-items="ViewBag.Brands">
                                <option value="">-- Select Brand --</option>
                            </select>
                            <span asp-validation-for="BrandId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ModelName" class="form-label">
                                <i class="fas fa-list"></i> Model Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="ModelName" class="form-control" />
                            <span asp-validation-for="ModelName" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update Model
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Summary Section -->
        <div class="col-md-4">
            <div class="card shadow-sm border-info mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i> Model Summary
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">ID:</dt>
                        <dd class="col-sm-7">@Model.Id</dd>

                        <dt class="col-sm-5">Model:</dt>
                        <dd class="col-sm-7"><strong>@Model.ModelName</strong></dd>

                        <dt class="col-sm-5">Current Brand:</dt>
                        <dd class="col-sm-7">
                            @if (Model.Brand != null)
                            {
                                <span class="badge bg-primary">@Model.Brand.BrandName</span>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card shadow-sm border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Warning
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        Changing the model name or brand may affect associated cars in the system.
                    </p>
                </div>
            </div>

            <div class="card shadow-sm border-secondary mt-3">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-link"></i> Quick Links
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.Brand != null)
                        {
                            <a asp-controller="Brands" asp-action="Details" asp-route-id="@Model.Brand.Id" class="btn btn-outline-primary">
                                <i class="fas fa-eye"></i> View Brand Details
                            </a>
                        }
                        <a asp-controller="Brands" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-trademark"></i> View All Brands
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
