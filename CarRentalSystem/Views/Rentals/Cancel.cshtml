@model CarRentalSystem.Entities.Rentals.Rental

@{
    ViewData["Title"] = $"Cancel Rental - #{Model.Id}";
    var totalPaid = Model.Payments?
        .Where(p => p.Status == CarRentalSystem.Entities.Rentals.PaymentStatus.Completed)
        .Sum(p => p.Amount) ?? 0;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold mb-0">
                <i class="fas fa-times-circle text-danger"></i> Cancel Rental
            </h1>
            <p class="text-muted">Cancel rental transaction and release vehicle</p>
        </div>
    </div>

    <!-- Back Button -->
    <div class="mb-3">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Details
        </a>
    </div>

    <div class="row">
        <!-- Cancellation Confirmation -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Cancellation Confirmation
                        <span class="badge bg-light text-dark float-end">Rental #@Model.Id</span>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle"></i> Warning!
                        </h5>
                        <p>You are about to cancel this rental. This action cannot be undone automatically.</p>
                        <hr />
                        <p class="mb-0">
                            Please ensure you have reviewed all details and confirmed with the client before proceeding.
                        </p>
                    </div>

                    <!-- Rental Summary -->
                    <div class="mb-4">
                        <h6 class="fw-bold text-primary border-bottom pb-2">
                            <i class="fas fa-file-contract"></i> Rental Summary
                        </h6>
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-5">Rental ID:</dt>
                                    <dd class="col-sm-7"><strong>#@Model.Id</strong></dd>

                                    <dt class="col-sm-5">Client:</dt>
                                    <dd class="col-sm-7">
                                        @if (Model.Client != null)
                                        {
                                            <strong>@Model.Client.FirstName @Model.Client.LastName</strong>
                                        }
                                    </dd>

                                    <dt class="col-sm-5">Phone:</dt>
                                    <dd class="col-sm-7 mb-0">
                                        @if (Model.Client != null)
                                        {
                                            <a href="tel:@Model.Client.PhoneNumber">@Model.Client.PhoneNumber</a>
                                        }
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-5">Vehicle:</dt>
                                    <dd class="col-sm-7">
                                        @if (Model.Car?.Model?.Brand != null)
                                        {
                                            <strong>@Model.Car.Model.Brand.BrandName @Model.Car.Model.ModelName</strong>
                                        }
                                    </dd>

                                    <dt class="col-sm-5">Registration:</dt>
                                    <dd class="col-sm-7">
                                        @if (Model.Car != null)
                                        {
                                            <span class="badge bg-dark">@Model.Car.RegistrationNumber</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-5">Status:</dt>
                                    <dd class="col-sm-7 mb-0">
                                        @switch (Model.Status)
                                        {
                                            case CarRentalSystem.Entities.Rentals.RentalStatus.Reserved:
                                                <span class="badge bg-info">Reserved</span>
                                                break;
                                            case CarRentalSystem.Entities.Rentals.RentalStatus.Active:
                                                <span class="badge bg-warning text-dark">Active</span>
                                                break;
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <!-- Rental Period -->
                    <div class="mb-4">
                        <h6 class="fw-bold text-primary border-bottom pb-2">
                            <i class="fas fa-calendar"></i> Rental Period
                        </h6>
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-5">Start Date:</dt>
                                    <dd class="col-sm-7 mb-0">
                                        @Model.RentalDate.ToString("MMMM dd, yyyy")
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-5">Return Date:</dt>
                                    <dd class="col-sm-7 mb-0">
                                        @if (Model.ReturnDate.HasValue)
                                        {
                                            <span>@Model.ReturnDate.Value.ToString("MMMM dd, yyyy")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not set</span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <!-- Financial Summary -->
                    @if (totalPaid > 0)
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold text-primary border-bottom pb-2">
                                <i class="fas fa-dollar-sign"></i> Financial Summary
                            </h6>
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Payment Alert:</strong>
                                <br />
                                Total payments received: <strong>@totalPaid.ToString("C")</strong>
                                <br />
                                <small>
                                    You may need to process a refund for the client. 
                                    Please handle refunds through the payment management system.
                                </small>
                            </div>

                            @if (Model.Payments != null && Model.Payments.Any())
                            {
                                <h6 class="fw-bold mt-3">Payment History:</h6>
                                <div class="table-responsive">
                                    <table class="table table-sm table-bordered">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Date</th>
                                                <th>Method</th>
                                                <th>Amount</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var payment in Model.Payments.OrderBy(p => p.PaymentDate))
                                            {
                                                <tr>
                                                    <td>@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                                                    <td>@payment.PaymentMethod</td>
                                                    <td><strong>@payment.Amount.ToString("C")</strong></td>
                                                    <td>
                                                        @switch (payment.Status)
                                                        {
                                                            case CarRentalSystem.Entities.Rentals.PaymentStatus.Completed:
                                                                <span class="badge bg-success">Completed</span>
                                                                break;
                                                            case CarRentalSystem.Entities.Rentals.PaymentStatus.Pending:
                                                                <span class="badge bg-warning text-dark">Pending</span>
                                                                break;
                                                            case CarRentalSystem.Entities.Rentals.PaymentStatus.Failed:
                                                                <span class="badge bg-danger">Failed</span>
                                                                break;
                                                            case CarRentalSystem.Entities.Rentals.PaymentStatus.Refunded:
                                                                <span class="badge bg-secondary">Refunded</span>
                                                                break;
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                    }

                    <!-- Cancellation Effects -->
                    <div class="card border-info bg-light mb-4">
                        <div class="card-body">
                            <h6 class="fw-bold text-info">
                                <i class="fas fa-info-circle"></i> What Happens When You Cancel?
                            </h6>
                            <ul class="mb-0">
                                <li>Rental status will be changed to <strong>Cancelled</strong></li>
                                <li>Vehicle will be marked as <strong>Available</strong> (if no other rentals)</li>
                                <li>Client will be notified of cancellation</li>
                                <li>Rental record will be preserved for history</li>
                                <li>Payments will remain linked to this rental</li>
                                @if (totalPaid > 0)
                                {
                                    <li class="text-danger">
                                        <strong>You may need to process refunds manually</strong>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <!-- Confirmation Form -->
                    <form asp-action="Cancel" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg" 
                                    onclick="return confirm('Are you absolutely sure you want to cancel this rental? This action should only be taken after client confirmation.');">
                                <i class="fas fa-times-circle"></i> Confirm Cancellation
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Go Back - Don't Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Cancellation Guidelines -->
        <div class="col-lg-4">
            <!-- Cancellation Policy -->
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-book"></i> Cancellation Policy
                    </h5>
                </div>
                <div class="card-body">
                    <h6 class="fw-bold">Before Cancelling:</h6>
                    <ul>
                        <li>Contact the client to confirm cancellation</li>
                        <li>Explain refund policy and process</li>
                        <li>Document cancellation reason</li>
                        <li>Check for any outstanding payments</li>
                    </ul>

                    <h6 class="fw-bold mt-3">After Cancellation:</h6>
                    <ul class="mb-0">
                        <li>Send cancellation confirmation to client</li>
                        <li>Process any necessary refunds</li>
                        <li>Update vehicle availability</li>
                        <li>Document in customer records</li>
                    </ul>
                </div>
            </div>

            <!-- Refund Information -->
            @if (totalPaid > 0)
            {
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0">
                            <i class="fas fa-money-bill-wave"></i> Refund Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning mb-3">
                            <strong>Total Paid:</strong> @totalPaid.ToString("C")
                        </div>
                        <h6 class="fw-bold">Refund Process:</h6>
                        <ol class="mb-0">
                            <li>Calculate refund amount based on policy</li>
                            <li>Go to Payments section</li>
                            <li>Update payment status to "Refunded"</li>
                            <li>Process refund through payment processor</li>
                            <li>Notify client of refund</li>
                        </ol>
                    </div>
                </div>
            }

            <!-- Alternative Actions -->
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-question-circle"></i> Need Help?
                    </h5>
                </div>
                <div class="card-body">
                    <p><strong>Consider These Alternatives:</strong></p>
                    <ul>
                        <li>
                            <a asp-action="Edit" asp-route-id="@Model.Id">
                                Reschedule the rental dates
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Cars" asp-action="Index">
                                Offer alternative vehicle
                            </a>
                        </li>
                        <li>
                            Contact supervisor for guidance
                        </li>
                    </ul>

                    <hr />

                    <p class="mb-0">
                        <strong>Still have questions?</strong>
                        <br />
                        Contact management before proceeding with cancellation.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
