@model IEnumerable<CarRentalSystem.Entities.Vehicles.Car>

@{
    ViewData["Title"] = "Cars";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold mb-0">
                <i class="fas fa-car text-primary"></i> Cars Management
            </h1>
            <p class="text-muted">Manage your car rental fleet</p>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Action Bar -->
    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Car
            </a>
        </div>
        <div class="col-md-6 text-end">
            <span class="badge bg-info fs-6">
                <i class="fas fa-car"></i> Total Cars: @Model.Count()
            </span>
        </div>
    </div>

    <!-- Advanced Filters Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-filter"></i> Advanced Filters
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="searchString" class="form-label">
                        <i class="fas fa-search"></i> Search
                    </label>
                    <input type="text" 
                           name="searchString" 
                           value="@ViewData["CurrentFilter"]" 
                           class="form-control" 
                           placeholder="Registration, Location, Model..." />
                </div>

                <div class="col-md-2">
                    <label for="brandId" class="form-label">
                        <i class="fas fa-trademark"></i> Brand
                    </label>
                    <select name="brandId" id="brandId" class="form-select">
                        <option value="">All Brands</option>
                        @if (ViewBag.Brands != null)
                        {
                            @foreach (SelectListItem brand in ViewBag.Brands)
                            {
                                <option value="@brand.Value" selected="@(ViewData["BrandId"]?.ToString() == brand.Value)">@brand.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label for="modelId" class="form-label">
                        <i class="fas fa-list"></i> Model
                    </label>
                    <select name="modelId" id="modelId" class="form-select">
                        <option value="">All Models</option>
                        @if (ViewBag.Models != null)
                        {
                            @foreach (SelectListItem modelItem in ViewBag.Models)
                            {
                                <option value="@modelItem.Value" selected="@(ViewData["ModelId"]?.ToString() == modelItem.Value)">@modelItem.Text</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label for="status" class="form-label">
                        <i class="fas fa-info-circle"></i> Status
                    </label>
                    <select name="status" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="@((int)CarRentalSystem.Entities.Vehicles.CarAvailability.Available)" 
                                selected="@(ViewData["Status"]?.ToString() == ((int)CarRentalSystem.Entities.Vehicles.CarAvailability.Available).ToString())">
                            Available
                        </option>
                        <option value="@((int)CarRentalSystem.Entities.Vehicles.CarAvailability.Rented)" 
                                selected="@(ViewData["Status"]?.ToString() == ((int)CarRentalSystem.Entities.Vehicles.CarAvailability.Rented).ToString())">
                            Rented
                        </option>
                        <option value="@((int)CarRentalSystem.Entities.Vehicles.CarAvailability.Reserved)" 
                                selected="@(ViewData["Status"]?.ToString() == ((int)CarRentalSystem.Entities.Vehicles.CarAvailability.Reserved).ToString())">
                            Reserved
                        </option>
                        <option value="@((int)CarRentalSystem.Entities.Vehicles.CarAvailability.Maintenance)" 
                                selected="@(ViewData["Status"]?.ToString() == ((int)CarRentalSystem.Entities.Vehicles.CarAvailability.Maintenance).ToString())">
                            Maintenance
                        </option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">
                        <i class="fas fa-dollar-sign"></i> Price Range
                    </label>
                    <div class="input-group">
                        <input type="number" 
                               name="minPrice" 
                               value="@ViewData["MinPrice"]" 
                               class="form-control" 
                               placeholder="Min"
                               step="0.01"
                               min="0" />
                        <span class="input-group-text">-</span>
                        <input type="number" 
                               name="maxPrice" 
                               value="@ViewData["MaxPrice"]" 
                               class="form-control" 
                               placeholder="Max"
                               step="0.01"
                               min="0" />
                    </div>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Apply Filters
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Clear Filters
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Cars Grid -->
    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var car in Model)
            {
                var statusClass = car.AvailabilityStatus switch
                {
                    CarRentalSystem.Entities.Vehicles.CarAvailability.Available => "success",
                    CarRentalSystem.Entities.Vehicles.CarAvailability.Rented => "danger",
                    CarRentalSystem.Entities.Vehicles.CarAvailability.Reserved => "warning",
                    CarRentalSystem.Entities.Vehicles.CarAvailability.Maintenance => "secondary",
                    _ => "info"
                };

                var statusIcon = car.AvailabilityStatus switch
                {
                    CarRentalSystem.Entities.Vehicles.CarAvailability.Available => "check-circle",
                    CarRentalSystem.Entities.Vehicles.CarAvailability.Rented => "key",
                    CarRentalSystem.Entities.Vehicles.CarAvailability.Reserved => "clock",
                    CarRentalSystem.Entities.Vehicles.CarAvailability.Maintenance => "tools",
                    _ => "info-circle"
                };

                <div class="col">
                    <div class="card h-100 shadow-sm car-card">
                        <!-- Status Badge -->
                        <div class="position-absolute top-0 end-0 m-2">
                            <span class="badge bg-@statusClass">
                                <i class="fas fa-@statusIcon"></i> @car.AvailabilityStatus
                            </span>
                        </div>

                        <!-- Car Image Placeholder -->
                        <div class="card-img-top bg-gradient" style="height: 200px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <div class="d-flex align-items-center justify-content-center h-100">
                                <i class="fas fa-car fa-5x text-white opacity-75"></i>
                            </div>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title mb-1">
                                @if (car.Model?.Brand != null)
                                {
                                    <strong>@car.Model.Brand.BrandName @car.Model.ModelName</strong>
                                }
                                else
                                {
                                    <strong>Unknown Model</strong>
                                }
                            </h5>
                            <p class="text-muted small mb-3">
                                <i class="fas fa-id-card"></i> @car.RegistrationNumber
                            </p>

                            <hr />

                            <div class="row mb-2">
                                <div class="col-6">
                                    <small class="text-muted">
                                        <i class="fas fa-tachometer-alt"></i> Mileage
                                    </small>
                                </div>
                                <div class="col-6 text-end">
                                    <small><strong>@car.Mileage.ToString("N0") km</strong></small>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-6">
                                    <small class="text-muted">
                                        <i class="fas fa-dollar-sign"></i> Daily Rate
                                    </small>
                                </div>
                                <div class="col-6 text-end">
                                    <small><strong class="text-success">@car.DailyPrice.ToString("C")</strong></small>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(car.Location))
                            {
                                <div class="row mb-2">
                                    <div class="col-12">
                                        <small class="text-muted">
                                            <i class="fas fa-map-marker-alt"></i> @car.Location
                                        </small>
                                    </div>
                                </div>
                            }

                            @if (car.Insurance != null)
                            {
                                <div class="row mb-2">
                                    <div class="col-12">
                                        <span class="badge bg-info">
                                            <i class="fas fa-shield-alt"></i> Insured
                                        </span>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="card-footer bg-transparent border-top-0">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">
                <i class="fas fa-info-circle"></i> No Cars Found
            </h4>
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()) || ViewData["BrandId"] != null || ViewData["ModelId"] != null || ViewData["Status"] != null)
            {
                <p>No cars match your search criteria. Try adjusting your filters or <a asp-action="Index" class="alert-link">clear the filters</a>.</p>
            }
            else
            {
                <p>There are no cars in the system yet. <a asp-action="Create" class="alert-link">Add your first car</a> to get started.</p>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        window.setTimeout(function() {
            $(".alert").fadeTo(500, 0).slideUp(500, function(){
                $(this).remove();
            });
        }, 5000);

        // Add hover effect to car cards
        $(document).ready(function() {
            $('.car-card').hover(
                function() {
                    $(this).addClass('shadow-lg').css('transform', 'translateY(-5px)');
                },
                function() {
                    $(this).removeClass('shadow-lg').css('transform', 'translateY(0)');
                }
            );

            // Smooth transition
            $('.car-card').css('transition', 'all 0.3s ease');
        });
    </script>

    <style>
        .car-card {
            transition: all 0.3s ease;
        }
    </style>
}
