@model IEnumerable<CarRentalSystem.Entities.Users.Employee>

@{
    ViewData["Title"] = "Employees";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold mb-0">
                <i class="fas fa-users text-primary"></i> Employees Management
            </h1>
            <p class="text-muted">Manage your company employees</p>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Action Bar -->
    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Employee
            </a>
        </div>
        <div class="col-md-6 text-end">
            <span class="badge bg-info fs-6">
                <i class="fas fa-users"></i> Total Employees: @Model.Count()
            </span>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchString" class="form-label">
                        <i class="fas fa-search"></i> Search
                    </label>
                    <input type="text" 
                           name="searchString" 
                           value="@ViewData["CurrentFilter"]" 
                           class="form-control" 
                           placeholder="Enter search term..." />
                </div>
                <div class="col-md-3">
                    <label for="searchType" class="form-label">
                        <i class="fas fa-filter"></i> Search By
                    </label>
                    <select name="searchType" class="form-select">
                        <option value="" selected>All Fields</option>
                        <option value="name" selected="@(ViewData["SearchType"]?.ToString() == "name")">Name</option>
                        <option value="position" selected="@(ViewData["SearchType"]?.ToString() == "position")">Position</option>
                        <option value="phone" selected="@(ViewData["SearchType"]?.ToString() == "phone")">Phone</option>
                    </select>
                </div>
                <div class="col-md-5 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Employees Table -->
    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th><i class="fas fa-hashtag"></i> ID</th>
                                <th><i class="fas fa-user"></i> Name</th>
                                <th><i class="fas fa-briefcase"></i> Position</th>
                                <th><i class="fas fa-phone"></i> Phone</th>
                                <th><i class="fas fa-calendar"></i> Hire Date</th>
                                <th><i class="fas fa-dollar-sign"></i> Salary</th>
                                <th class="text-center"><i class="fas fa-cog"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">#@employee.Id</span>
                                    </td>
                                    <td>
                                        <strong>@employee.FirstName @employee.LastName</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@employee.Position</span>
                                    </td>
                                    <td>
                                        <i class="fas fa-phone text-muted"></i> @employee.Phone
                                    </td>
                                    <td>
                                        @employee.HireDate.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        <strong>@employee.Salary.ToString("C")</strong>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" 
                                               asp-route-id="@employee.Id" 
                                               class="btn btn-outline-info"
                                               title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" 
                                               asp-route-id="@employee.Id" 
                                               class="btn btn-outline-warning"
                                               title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" 
                                               asp-route-id="@employee.Id" 
                                               class="btn btn-outline-danger"
                                               title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">
                <i class="fas fa-info-circle"></i> No Employees Found
            </h4>
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
            {
                <p>No employees match your search criteria. Try adjusting your filters or <a asp-action="Index" class="alert-link">clear the search</a>.</p>
            }
            else
            {
                <p>There are no employees in the system yet. <a asp-action="Create" class="alert-link">Add your first employee</a> to get started.</p>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        window.setTimeout(function() {
            $(".alert").fadeTo(500, 0).slideUp(500, function(){
                $(this).remove();
            });
        }, 5000);
    </script>
}
